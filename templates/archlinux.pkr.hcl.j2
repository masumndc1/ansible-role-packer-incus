packer {
  required_plugins {
    incus = {
      source  = "github.com/bketelsen/incus"
      version = "~> 1"
    }
  }
}

source "incus" "incus-arch" {
  image = "images:archlinux/current/arm64"
  output_image = "arch-packer"
  reuse = true
  publish_properties = {
    "description" = "incus archlinux repackage with Packer"
  }
}

build {
  sources = ["incus.incus-arch"]
  provisioner "shell" {
    scripts = [
      "user.sh",
      "packages.sh",
      "service.sh"
    ]
  }
}
